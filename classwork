    $message = htmlspecialchars($_POST["message"] ?? "");

    if (!empty($friend) && !empty($message)) {
        echo "<p> Message sent to <strong>$friend</strong>: \"$message\"</p>";
    } else {
        echo "<p style='color:red;'>Please enter both friend and message.</p>";
